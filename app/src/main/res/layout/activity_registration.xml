<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tranroads"
    android:orientation="vertical"
    tools:context="com.example.user.transroads.RegistrationActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="82dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/image_button"
            android:src="@drawable/ic_person_white_48dp"
            android:layout_marginTop="100dp"
            />

        <EditText
            android:id="@+id/regUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff"
            android:hint="User Name"
            android:ems="10"
            android:background="@drawable/auth_inputs"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:textColorHint="#FFF"
            android:maxLines="1"
            android:drawableLeft="@drawable/user"
            android:layout_marginTop="10dp"
            />


        <EditText
            android:id="@+id/regEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:hint="Email address"
            android:ems="10"
            android:background="@drawable/auth_inputs"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:textColorHint="#fff"
            android:maxLines="1"
            android:drawableLeft="@drawable/email"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:ems="10"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:hint="Password"
            android:textColorHint="#fff"
            android:maxLines="1"
            android:background="@drawable/auth_inputs"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/password_white"/>

        <EditText
            android:id="@+id/reEnterPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:ems="10"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:hint="Re-Enter"
            android:textColorHint="#fff"
            android:maxLines="1"
            android:background="@drawable/auth_inputs"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/confirm_password"/>

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button"
            android:text="Register"
            android:onClick="onClick_Registration"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:clickable="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Have An Account?"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:alpha="0.7"/>

            <TextView
                android:id="@+id/registerLogInText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="249dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
