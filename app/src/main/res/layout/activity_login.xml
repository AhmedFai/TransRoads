<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tranroads"
    tools:context="com.example.user.transroads.LoginActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="16dp" />
            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:hint="Email address"
                android:ems="10"
                android:background="@drawable/auth_inputs"
                android:drawablePadding="12dp"
                android:padding="10dp"
                android:textColorHint="#ffffff"
                android:maxLines="1"
                android:drawableLeft="@drawable/email"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/logInPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:ems="10"
                android:drawablePadding="12dp"
                android:padding="10dp"
                android:hint="Password"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:background="@drawable/auth_inputs"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/password_white"/>



            <Button
                android:id="@+id/logInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:text="Log in"
                android:onClick="onClick_Login"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:clickable="true"/>

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#fff"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/login_with_google"
                android:layout_width="match_parent"
                android:text="Sign in with Google"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17sp"
                android:background="@drawable/google_button"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />


            <Button
                android:id="@+id/fb_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in with Facebook"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:background="@drawable/facebook_button"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot your Password?"
                android:textColor="#fff"
                android:alpha="0.7"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Here? SignUp"
                android:textColor="#fff"
                android:alpha="0.7"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:clickable="true" />
            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>
